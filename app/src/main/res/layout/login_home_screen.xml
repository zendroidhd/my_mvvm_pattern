<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        
        <import type="android.view.View" />
        
        <variable
                name="viewModel"
                type="com.technologies.zenlight.earncredits.userInterface.login.loginFragment.LoginFragmentViewModel" />
    
    </data>
    
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        
        
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_color"
                android:orientation="vertical"
                android:padding="15dp">
            
            <LinearLayout
                    android:id="@+id/layout_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="invisible"
                    tools:visibility="visible">
                
                <TextView
                        android:id="@+id/tv_app_title_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="50dp"
                        android:fontFamily="@font/pac_font"
                        android:text="earn"
                        android:textAlignment="center"
                        android:textColor="@color/pac_yellow"
                        android:textSize="40sp" />
                
                <TextView
                        android:id="@+id/tv_app_title_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/pac_font"
                        android:text="credits"
                        android:textAlignment="center"
                        android:textColor="@color/pac_yellow"
                        android:textSize="40sp" />
            
            </LinearLayout>
            
            
            <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".2" />
            
            <LinearLayout
                    android:id="@+id/layout_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">
                
                <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:fontFamily="@font/arcade_font"
                        android:hint="Enter Email"
                        android:imeOptions="actionDone"
                        android:inputType="textEmailAddress"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/white"
                        android:textColorHint="@color/transparent_white" />
    
    
                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:theme="@style/TextInputStyle"
                        android:textColorHint="@color/transparent_white"
                        android:layout_marginTop="20dp"
                        app:hintAnimationEnabled="false"
                        app:hintEnabled="false"
                        app:hintTextColor="@color/transparent_white"
                        app:endIconMode="password_toggle"
                        app:endIconTint="@color/white">
        
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_code"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@color/transparent"
                            android:fontFamily="@font/arcade_font"
                            android:imeOptions="actionDone"
                            android:inputType="textPassword"
                            android:hint="Enter Password"
                            android:textColorHint="@color/transparent_white"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            android:textColor="@color/white" />
    
                </com.google.android.material.textfield.TextInputLayout>
                
                
                <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_insert_coin"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/arcade_font"
                        android:onClick="@{()-> viewModel.onEnterButtonClicked()}"
                        android:text="Insert Coin"
                        android:textColor="@color/arcade_red"
                        android:textSize="20sp"
                        app:backgroundTint="@color/transparent"
                        app:cornerRadius="5dp"
                        app:rippleColor="@color/transparent_white" />
                
                <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_sign_up"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/arcade_font"
                        android:onClick="@{()-> viewModel.onSignUpClicked()}"
                        android:text="Sign Up"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/transparent_white"
                        app:rippleColor="@color/super_transparent_white" />
                
                
                <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_forgot_password"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/arcade_font"
                        android:onClick="@{()-> viewModel.onForgotPasswordClicked()}"
                        android:text="@string/forgot_password"
                        android:textAllCaps="false"
                        android:textAppearance="@style/Base.Widget.AppCompat.TextView"
                        android:textColor="@color/transparent_white"
                        android:textSize="17sp"
                        app:rippleColor="@color/super_transparent_white" />
            </LinearLayout>
            
            <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
        
        
        </LinearLayout>
    
    </FrameLayout>

</layout>
