<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/transparent_black_darker">
        
        <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/black_color"
                app:cardCornerRadius="15dp"
                app:strokeColor="@color/dark_orange"
                app:strokeWidth="5dp">
            
            
            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
    
                    <TextView
                            android:id="@+id/tv_cost"
                            style="@style/ArcadeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:textColor="@color/transparent_white"
                            android:textSize="12sp"
                            android:background="@color/dark_orange"
                            android:padding="10dp"
                            tools:text="Cost: 2" />
                    
                    <TextView
                            android:id="@+id/tv_title"
                            style="@style/ArcadeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginEnd="15dp"
                            android:lineSpacingExtra="7dp"
                            android:maxLines="2"
                            android:textColor="@color/dark_orange"
                            android:textSize="14sp"
                            tools:text="Go to the movies with the wife" />
                    
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:background="@color/super_transparent_white"
                            android:orientation="horizontal">
                        
                        <ImageView
                                android:id="@+id/iv_icon"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginStart="15dp"
                                android:padding="15dp"
                                tools:src="@drawable/ic_orange_power_up" />
                      
                        
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:layout_marginEnd="15dp"
                                android:layout_gravity="center_vertical"
                                android:orientation="vertical">
    
                            <TextView
                                    android:id="@+id/tv_stats_one"
                                    style="@style/ArcadeTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/transparent_white"
                                    android:textSize="12sp"
                                    android:lineSpacingExtra="9dp"
                                    android:layout_marginTop="5dp"
                                    tools:text="+120%" />
    
                            <TextView
                                    android:id="@+id/tv_stats_two"
                                    style="@style/ArcadeTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/transparent_white"
                                    android:layout_marginTop="20dp"
                                    android:lineSpacingExtra="7dp"
                                    android:textSize="12sp"
                                    tools:text="-20% stamina" />
                        
                        </LinearLayout>
                    
                    </LinearLayout>
                    
                    <TextView
                            android:id="@+id/tv_icon_hint_text"
                            style="@style/ArcadeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginEnd="15dp"
                            android:lineSpacingExtra="10dp"
                            android:textColor="@color/arcade_red"
                            android:textSize="10sp"
                            tools:text="-'One two, one two punch, Mac!'" />
                    
                    <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_delete"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="35dp"
                            android:layout_marginEnd="15dp"
                            android:fontFamily="@font/arcade_font"
                            android:text="Delete "
                            android:textAllCaps="false"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            android:textColor="@color/pac_yellow"
                            app:rippleColor="@color/super_transparent_white" />
                    
                    <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_use_power_up"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginEnd="15dp"
                            android:fontFamily="@font/arcade_font"
                            android:text="Use Power Up "
                            android:textAllCaps="false"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            android:textColor="@color/pac_yellow"
                            app:rippleColor="@color/super_transparent_white" />
                
                </LinearLayout>
            
            </ScrollView>
        
        </com.google.android.material.card.MaterialCardView>
    
    </FrameLayout>

</layout>