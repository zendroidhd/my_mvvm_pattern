<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        
        <import type="android.view.View" />
        
        <variable
                name="viewModel"
                type="com.technologies.zenlight.earncredits.userInterface.home.challenges.createNewChallenge.CreateChallengeViewModel" />
    
    </data>
    
    <FrameLayout
            android:id="@+id/layout_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_color"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">
        
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            
            <LinearLayout
                    android:id="@+id/layout_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/black_color"
                    android:orientation="vertical"
                    android:padding="15dp">
                
                <TextView
                        android:id="@+id/tv_title"
                        style="@style/ArcadeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="7dp"
                        android:text="Create New Challenge"
                        android:textAlignment="center"
                        android:textColor="@color/pac_yellow"
                        android:textSize="20sp" />
                
                <TextView
                        style="@style/ArcadeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="Description:"
                        android:textColor="@color/white"
                        android:textSize="11sp" />
                
                <EditText
                        android:id="@+id/et_description"
                        style="@style/TextInputStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:fontFamily="@font/arcade_font"
                        android:hint="Ex. Do 100 pushups"
                        android:imeOptions="actionDone"
                        android:inputType="textCapSentences|textMultiLine"
                        android:lineSpacingExtra="15dp"
                        android:minHeight="60dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/transparent_white"
                        android:textColorHint="@color/transparent_white" />
                
                <TextView
                        style="@style/ArcadeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:text="Completion Date:"
                        android:textColor="@color/white"
                        android:textSize="11sp" />
                
                <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_completion_date"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:fontFamily="@font/arcade_font"
                        android:onClick="@{()-> viewModel.onSetDateClicked()}"
                        android:paddingStart="0dp"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textAppearance="@style/Base.Widget.AppCompat.TextView"
                        android:textColor="@color/transparent_white"
                        android:textSize="13sp"
                        app:icon="@drawable/ic_arrow_right"
                        app:iconGravity="end"
                        app:rippleColor="@color/super_transparent_white"
                        tools:text="11/21/1989" />
                
                <TextView
                        style="@style/ArcadeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:text="Credits:"
                        android:textColor="@color/white"
                        android:textSize="11sp" />
                
                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp">
                    
                    <Spinner
                            android:id="@+id/spinner_credits"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="?attr/selectableItemBackground"
                            android:entries="@array/credits_amount_list"
                            android:paddingEnd="25dp" />
                    
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_arrow_right"
                            android:tint="@color/transparent_white" />
                
                
                </FrameLayout>
                
                
                <FrameLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="bottom|end"
                        android:layout_marginTop="15dp">
                    
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:onClick="@{()-> viewModel.onCreateNewChallengeClicked()}"
                            android:src="@drawable/btn_green_fab" />
                    
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_check_black_24dp"
                            android:tint="@color/black_color" />
                
                </FrameLayout>
            
            </LinearLayout>
        
        </ScrollView>
    
    </FrameLayout>

</layout>