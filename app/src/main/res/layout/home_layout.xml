<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        
        <import type="android.view.View" />
        
        <variable
                name="viewModel"
                type="com.technologies.zenlight.earncredits.userInterface.home.homeFragment.HomeFragmentViewModel" />
    
    </data>
    
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_color">
        
        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="-5dp"
                android:background="@drawable/pac_man_background" />
        
        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#99000000" />
        
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">
                
                
                <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_hamburger"
                        style="@style/IconOnlyButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="25dp"
                        android:onClick="@{()-> viewModel.onHamburgerClicked()}"
                        app:icon="@drawable/ic_hamburger"
                        app:iconTint="@color/white"
                        app:rippleColor="@color/pac_yellow" />
                
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toStartOf="@id/btn_heart"
                        android:layout_toEndOf="@id/btn_hamburger"
                        android:orientation="horizontal">
                    
                    <TextView
                            style="@style/ArcadeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Credits: "
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            android:textColor="@color/white" />
                    
                    <TextView
                            android:id="@+id/tv_credits"
                            style="@style/ArcadeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleY="1.1"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            android:textColor="@color/white"
                            tools:text="1,000" />
                
                </LinearLayout>
                
                <FrameLayout
                        android:id="@+id/btn_heart"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true">
                    
                    <ImageView
                            style="@style/AppTheme.ClearBackGroundWhiteRipple"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="1dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_heart" />
                    
                    <TextView
                            style="@style/ArcadeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            tools:text="99" />
                
                
                </FrameLayout>
            
            
            </RelativeLayout>
            
            
            <com.google.android.material.tabs.TabLayout
                    android:id="@+id/viewpagertab"
                    style="@style/Widget.MaterialComponents.TabLayout.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/transparent"
                    app:tabIndicatorColor="@color/pac_yellow"
                    app:tabIndicatorHeight="8dp" />
            
            <androidx.viewpager.widget.ViewPager
                    android:id="@+id/vp_main"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
            
            </androidx.viewpager.widget.ViewPager>
        
        
        </LinearLayout>
        
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
        
        
        </LinearLayout>
    
    </FrameLayout>

</layout>