<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent_black_dark"
            android:clickable="false"
            android:focusable="false"
            android:orientation="vertical">
        
        <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        
        <ScrollView
                android:id="@+id/layout_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >
            
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="15dp">
                
                
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/arcade_font"
                        android:text="Quote of the Day:"
                        android:textColor="@color/black_color"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                
                
                <TextView
                        android:id="@+id/tv_quote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:fontFamily="@font/arcade_font"
                        android:lineSpacingExtra="10dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:textColor="@color/black_color"
                        android:textIsSelectable="true"
                        android:textSize="13sp"
                        tools:text="Your rewards in life will always be in direction proportion"
                    />
                
                <TextView
                        android:id="@+id/tv_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:fontFamily="@font/arcade_font"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:textColor="@color/black_color"
                        android:textIsSelectable="true"
                        android:textSize="10sp"
                        tools:text="- Jacque' Terrell" />
                
                <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_new_quote"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/arcade_font"
                        android:text="New Quote"
                        android:textAllCaps="false"
                        android:textAppearance="@style/Base.Widget.AppCompat.TextView"
                        android:textColor="@color/arcade_red"
                        android:textSize="15sp"
                        app:rippleColor="@color/super_transparent_white" />
            
            </LinearLayout>
        
        </ScrollView>
    
        <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
    
    </LinearLayout>

</layout>
